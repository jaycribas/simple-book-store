extends layout

block content
  for book in books 
    table.books.datatable.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
      tr
        th Title
        td#theTitle= book.title
        td.weirdbox
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editTitle(hidden='')
              input(
                type='text'
                name='title'
                value=book.title
              )
          td.wtf    
            input#editTitleButton(type='button', value='edit')
            input#saveTitleButton(hidden='' type='submit', value='save')
      tr
        th Author
        td= book.author
        td
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editAuthor(hidden='')
              input(
                type='text'
                name='author'
                value=book.author
                )
            input#editAuthorButton(type='button', value='edit')
            input#saveAuthorButton(hidden='' type='submit', value='save')
      tr
        th Genre
        td= book.genre
        td
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editGenre(hidden='')
              input(
                type='text'
                name='genre'
                value=book.genre
                )
            input#editGenreButton(type='button', value='edit')
            input#saveGenreButton(hidden='' type='submit', value='save')
      tr
        th Subgenre
        td= book.subgenre
        td
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editSubgenre(hidden='')
              input(
                type='text'
                name='subgenre'
                value=book.subgenre
                )
            input#editSubgenreButton(type='button', value='edit')
            input#saveSubgenreButton(hidden='' type='submit', value='save')
      tr
        th Pages
        td= book.height
        td
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editPages(hidden='')
              input(
                type='text'
                name='pages'
                value=book.height
                )
            input#editPagesButton(type='button', value='edit')
            input#savePagesButton(hidden='' type='submit', value='save')
      tr
        th Publisher
        td= book.publisher
        td
          form(
            action='/editbook/'+book.id
            method='post'
            )
            #editPublisher(hidden='')
              input(
                type='text'
                name='publisher'
                value=book.publisher
                )
            input#editPublisherButton(type='button', value='edit')
            input#savePublisherButton(hidden='' type='submit', value='save')  
    form(
      action='deletebook/' + book.id
      method='post'
    )
      button(
        onclick="return confirm('Are you sure you want to delete this book?')"
        type='submit'
      ) Delete book

  script.
    $("#editTitleButton").click(function() {
    $("#theTitle").hide();
    $("#editTitle").show();
    $("#saveTitleButton").show();
    });
    $("#editAuthorButton").click(function() {
    $("#editAuthor").show();
    $("#saveAuthorButton").show();
    });
    $("#editGenreButton").click(function() {
    $("#editGenre").show();
    $("#saveGenreButton").show();
    });
    $("#editSubgenreButton").click(function() {
    $("#editSubgenre").show();
    $("#saveSubgenreButton").show();
    });
    $("#editPagesButton").click(function() {
    $("#editPages").show();
    $("#savePagesButton").show();
    });
    $("#editPublisherButton").click(function() {
    $("#editPublisher").show();
    $("#savePublisherButton").show();
    });
