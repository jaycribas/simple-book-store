extends layout

block content
  //- h1= Bookstore
  //- for book in books
  //-   p= book.author
  
  table#bookstore.datatable.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
    tr
      th Title
      th Author
      th Genre
      th Subgenre
      th Height
      th Publisher
    for book in books
      tbody
        tr
          td= book.title
          td= book.author
          td= book.genre
          td= book.subgenre
          td= book.height
          td= book.publisher
          
  script.
    $(document).ready(function(){
    $("#bookstore").dataTable();
    });
